<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="holder"
            type="com.hyeonbinni.companyinfosearch.CompanySearchItemListAdapter.CellTypeCompanyListViewHolder" />

        <variable
            name="item"
            type="com.hyeonbinni.domain.entity.CellTypeCompanyItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCompanyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> holder.navigateToDetail(item, view)}"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:loadImage="@{item.logoPath}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/ivLogo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{item.name}"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/tvRateTotalAvg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{Double.valueOf(item.rateTotalAvg).toString()}"
                    android:textSize="16sp"
                    android:textColor="#F3CF1B"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tvCompanyName"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/tvIndustryName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{item.industryName}"
                    android:textSize="16sp"
                    android:textColor="#CBC9BE"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/tvRateTotalAvg"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCompanyReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/clCompanyInfo">

            <TextView
                android:id="@+id/tvReviewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:text="@{item.reviewSummary}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvSalaryAvgTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#65bc00"
                android:text="평균연봉"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvReviewSummary"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvSalaryAvg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@{item.salaryAvg}"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="@id/tvSalaryAvgTitle"
                app:layout_constraintStart_toEndOf="@id/tvSalaryAvgTitle"/>

            <TextView
                android:id="@+id/tvSalaryUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="만원"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="@id/tvSalaryAvgTitle"
                app:layout_constraintStart_toEndOf="@id/tvSalaryAvg"/>

            <TextView
                android:id="@+id/tvInterviewQuestionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="면접질문"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvSalaryAvgTitle"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvInterviewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#808080"
                android:text="@{item.interviewQuestion}"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvInterviewQuestionTitle"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>